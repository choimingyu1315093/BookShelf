<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cl"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_bg5"
    tools:context=".view.fragment.login.ChangeFragment">

    <TextView
        android:id="@+id/txtChange"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CHANGE"
        android:fontFamily="@font/lato_regular"
        android:textColor="@color/white"
        android:textSize="44sp"
        android:textStyle="bold"
        android:layout_marginTop="132dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/etCurrentPassword"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:inputType="textPassword"
        android:textColor="@color/white"
        android:hint="현재 비밀번호"
        android:fontFamily="@font/lato_regular"
        android:textSize="14sp"
        android:theme="@style/EditTextStyleLogin"
        android:textColorHint="@color/white"
        android:paddingHorizontal="12dp"
        android:background="@drawable/bg_no_white_8"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="100dp"
        app:layout_constraintTop_toBottomOf="@id/txtChange"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/etPassword"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:inputType="textPassword"
        android:textColor="@color/white"
        android:hint="비밀번호"
        android:fontFamily="@font/lato_regular"
        android:textSize="14sp"
        android:theme="@style/EditTextStyleLogin"
        android:textColorHint="@color/white"
        android:paddingHorizontal="12dp"
        android:background="@drawable/bg_no_white_8"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/etCurrentPassword"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
        android:id="@+id/txtPasswordWarning"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="❗️비밀번호는 영문, 숫자, 특문자를 포함하여 8~15자이어야 합니다."
        android:fontFamily="@font/lato_regular"
        android:textSize="14sp"
        android:textColor="@color/red"
        android:layout_marginTop="5dp"
        android:visibility="gone"
        tools:visibility="visible"
        app:layout_constraintTop_toBottomOf="@id/etPassword"
        app:layout_constraintStart_toStartOf="@id/etPassword"
        app:layout_constraintEnd_toEndOf="@id/etPassword"/>
    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/etPasswordCheck"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:inputType="textPassword"
        android:textColor="@color/white"
        android:hint="비밀번호 확인"
        android:fontFamily="@font/lato_regular"
        android:textSize="14sp"
        android:theme="@style/EditTextStyleLogin"
        android:textColorHint="@color/white"
        android:paddingHorizontal="12dp"
        android:background="@drawable/bg_no_white_8"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/txtPasswordWarning"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
        android:id="@+id/txtPasswordCheckWarning"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="가"
        android:fontFamily="@font/lato_regular"
        android:textSize="14sp"
        android:textColor="@color/red"
        android:layout_marginTop="5dp"
        android:visibility="gone"
        tools:visibility="visible"
        app:layout_constraintTop_toBottomOf="@id/etPasswordCheck"
        app:layout_constraintStart_toStartOf="@id/etPasswordCheck"
        app:layout_constraintEnd_toEndOf="@id/etPasswordCheck"/>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnChange"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:background="@drawable/bg_no_white_8"
        android:text="비밀번호 변경"
        android:fontFamily="@font/lato_regular"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:layout_marginTop="120dp"
        android:layout_marginHorizontal="20dp"
        app:layout_constraintTop_toBottomOf="@id/etPasswordCheck"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>